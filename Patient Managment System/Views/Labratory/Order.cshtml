
@{
    ViewData["Title"] = "Order";
}

<div class="text-center">
    <h2 class="brand-text d-none d-lg-inline-block">Labratory Menu</h2>
    <form class="login-form py-5 w-100" method="post" action="/Labratory/Order">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Id">Patient ID</label>
                <input type="number" class="form-control" id="Id" name="Id" placeholder="Patient ID">
            </div>         
        </div>  
        <button class="btn btn-primary mb-3" id="login" type="submit">Search</button>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label"></label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Labratory Order" disabled>@ViewBag.LabOrder</textarea>
       </div>
    </form>

    <form class="login-form py-5 w-100" method="post" action="/Labratory/Result">
        <div class="input-material-group mb-3">
            <input class="input-material" id="login-username" type="text" name="Result" autocomplete="on" required data-validate-field="LabResult">
            <label class="label-material" for="Result">Labratory Result</label>
        </div>
        <button class="btn btn-primary mb-3" id="login" type="submit">Submit</button>
    </form>
</div>

