
@{
    ViewData["Title"] = "Shop";
    <script src="~/js/front.js"></script>
}

<div class="text-center">
    <h2 class="brand-text d-none d-lg-inline-block">Shop</h2>
    <form class="login-form py-5 w-100" method="post" action="/Pharmacy/Shop">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Id">Patient ID</label>
                <input type="number" class="form-control" id="Id" name="Id" placeholder="Patient ID">
            </div>
        </div>
        <button class="btn btn-primary mb-3" id="login" type="submit">Search</button>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label"></label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Medicine Order" disabled>@ViewBag.medOrder</textarea>
        </div>
    </form>
    <form class="login-form py-5 w-100" method="post" action="/Pharmacy/ShopingBill">
        <div class="input-material-group mb-3">
            <input class="input-material" id="login-username" type="text" name="Id" autocomplete="on" required data-validate-field="loginUsername">
            <label class="label-material" for="Id">Patient ID</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="BillType" required data-validate-field="DrugName">
            <label class="label-material" for="BillType">Bill Type</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="InvoiceTitle" required data-validate-field="DrugName">
            <label class="label-material" for="InvoiceTitle">Drug Name</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="InvoiceAmount" required data-validate-field="DrugName">
            <label class="label-material" for="InvoiceAmount">Medicine Price</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="PaymentMode" required data-validate-field="DrugName">
            <label class="label-material" for="PaymentMode">Payment Mode</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="PaymentStatus" required data-validate-field="DrugName">
            <label class="label-material" for="PaymentStatus">Payment Status</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="Reference" required data-validate-field="DrugName">
            <label class="label-material" for="Reference">Reference</label>
        </div>
        <button class="btn btn-primary mb-3" id="login" type="submit">Confirm</button>
    </form>
</div>


