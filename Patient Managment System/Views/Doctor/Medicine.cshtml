
@{
    ViewData["Title"] = "Medicine";
}

<div class="text-center">
    <h2 class="brand-text d-none d-lg-inline-block">Medicine Order</h2>
    <form class="login-form py-5 w-100" method="get" action="index.html">
        <div class="input-material-group mb-3">
            <input class="input-material" id="login-username" type="text" name="PatientId" autocomplete="on" required data-validate-field="loginUsername">
            <label class="label-material" for="PatientId">Patient ID</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="DrugName" required data-validate-field="DrugName">
            <label class="label-material" for="DrugName">Drug Name</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="Type" required data-validate-field="DrugType">
            <label class="label-material" for="Type">Drug Type</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="Dosage" required data-validate-field="Dosage">
            <label class="label-material" for="Dosage">Dosage</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="Duration" required data-validate-field="howlong">
            <label class="label-material" for="Duration">For how long the medicne should be taken?</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="Advice" required data-validate-field="Advice">
            <label class="label-material" for="Advice">Advice</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="PhysicianName" required data-validate-field="PhysicianName">
            <label class="label-material" for="PhysicianName">Physician Name</label>
        </div>
        <button class="btn btn-primary mb-3" id="login" type="submit">Submit</button>
    </form>
</div>
