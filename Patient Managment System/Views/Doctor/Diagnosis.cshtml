
@{
    ViewData["Title"] = "Diagnosis";
}

<div class="text-center">
    <h2 class="brand-text d-none d-lg-inline-block">Diagnosis</h2>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label"></label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Labratory Result" disabled></textarea>
    </div>
    <form class="login-form py-5 w-100" method="get" action="index.html">
        <div class="input-material-group mb-3">
            <input class="input-material" id="login-username" type="text" name="PatientId" autocomplete="on" required data-validate-field="loginUsername">
            <label class="label-material" for="PatientId">Patient ID</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="text" name="Diagnosis" required data-validate-field="Diagnosis">
            <label class="label-material" for="Diagnosis">Diagnosis</label>
        </div>
        <div class="input-material-group mb-4">
            <input class="input-material" id="login-password" type="Date" name="NextCheckup" required data-validate-field="Checkup">
            <label class="label-material" for="NextCheckup">Next Checkup On</label>
        </div>
        <button class="btn btn-primary mb-3" id="login" type="submit">Submit</button>
    </form>
</div>


